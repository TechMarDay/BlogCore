@model BlogCore.Models.Pagination<PostModel>
@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/index.css" rel="stylesheet" />


<div class="row mb-2">
    @foreach (var item in Model.Items)
    {
        @*index++;
            if (index / 2 == 0)
            {
                <div class="col-md-6">
                    <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                        <div class="col p-4 d-flex flex-column position-static">
                            <strong class="d-inline-block mb-2 text-primary">@item.Category.Name</strong>
                            <h3 class="mb-0">@item.Title</h3>
                            <div class="mb-1 text-muted">Nov 12</div>
                            <p class="card-text mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                            <a href="~/Post/Details/@item.Id" class="stretched-link">Continue reading</a>
                        </div>
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <div class="bd-placeholder-img card-img-top">
                                <img class="bd-placeholder-img" width="200" height="250" src="@item.Image" alt="">
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {*@
        <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
                @*<svg class="bd-placeholder-img card-img-top" width="100%" height="100" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>*@
                @if (!string.IsNullOrEmpty(item.Image))
                {
                    <div class="bd-placeholder-img card-img-top">
                        <img class="bd-placeholder-img" width="100%" height="200" src="@item.Image" alt="">
                    </div>
                }
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-primary">@item.Category.Name</strong>
                    <h3 class="mb-0">@item.Title</h3>
                    <div class="mb-1 text-muted">Nov 12</div>
                    <p class="card-text mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                    <a href="~/Post/Details/@item.Id" class="stretched-link">Continue reading</a>
                </div>
            </div>
        </div>
        @*}*@
    }


</div>