
@model BlogCore.Models.Pagination<PostModel>
@{
    Layout = "~/Views/Shared/_LayoutNoBar.cshtml";
    ViewData["Title"] = "Home Page";
}
<link href="~/css/index.css" rel="stylesheet" />


<div class="row mb-2">
    @foreach (var item in Model.Items)
    {
        <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
                @if (!string.IsNullOrEmpty(item.Image))
                {
                    <div class="bd-placeholder-img card-img-top">
                        <img class="bd-placeholder-img" width="100%" height="200" src="@item.Image" alt="">
                    </div>
                }
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-primary">@item.Category.Name</strong>
                    <h3 class="mb-0">@item.Title</h3>
                    <div class="mb-1 text-muted">Nov 12</div>
                    <p class="card-text mb-auto">@item.Summary</p>
                    <a href="~/danh-muc/@item.Id" class="stretched-link">Continue reading</a>
                </div>
            </div>
        </div>
        @*}*@
    }


</div>
@if (Model.TotalRecords > 0)
{
    <div class="row">
        <div class="col-sm-12">
            <ul class="pagination">
                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a asp-route-currentpage="@i" class="page-link">@i</a>
                    </li>
                }
            </ul>
        </div>
    </div>
}
