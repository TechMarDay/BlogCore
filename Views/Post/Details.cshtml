    <link href="~/css/navbar.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/dashboard.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar-expand-md navbar-dark fixed-top bg-dark">
        <nav class="navbar">
            <a class="branch text-white" href="/home">TechMarDay</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse text-white" id="navbarsExampleDefault">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/danh-muc/10">.Net<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown active">
                        <a class="nav-link dropdown-toggle " href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Marketing</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown01">
                            <a class="dropdown-item" href="/danh-muc/19">ADS</a>
                            <a class="dropdown-item" href="/danh-muc/20">SEO</a>
                            <a class="dropdown-item" href="/danh-muc/21">Content</a>
                            <a class="dropdown-item" href="/danh-muc/22">Event</a>
                            <a class="dropdown-item" href="/danh-muc/23">Plan Marketing </a>
                        </div>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/danh-muc/24" tabindex="-1">Life</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/danh-muc/25" tabindex="-1">Job & interview</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Find in blog" aria-label="Search">
                    <button class="btn btn-outline-light my-2 my-sm-0 text-white" type="submit">Search</button>
                </form>
            </div>
        </nav>
    </div>
    <main role="main">

        <div class="container">
            <div class="row">
                <div class="col-md-10 blog-main">
                    <script src="~/lib/ckeditor/plugins/codesnippet/lib/highlight/highlight.pack.js"></script>
                    <link href="~/lib/ckeditor/plugins/codesnippet/lib/highlight/styles/ir_black.css" rel="stylesheet" />
                    <div class="col-lg-12">
                        <!-- Title -->
                        <h1 class="mt-4">@Model.Title</h1>
                        <hr>
                        <!-- Date/Time -->
                        <p>Posted on @Model.LastModificationTime.ToString("d/M/yyyy")</p>

                        <!-- Preview Image -->
                        <img class="img-fluid rounded" src="@Model.Image" alt="">

                        <div id="Content" name="Content">
                            @Html.Raw(Model.Content)
                        </div>
                        <!-- /.blog-main -->
                    </div>

                </div><!-- /.row -->
                @await Component.InvokeAsync("MenuRight")<!-- /.blog-sidebar -->
            </div>
        </div>
    </main><!-- /.container -->

    <script>hljs.initHighlightingOnLoad();</script>

